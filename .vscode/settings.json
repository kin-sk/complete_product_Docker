// .vscode/settings.json
{
  // --------------------------------------------------
  // 全言語共通の設定
  // --------------------------------------------------
  "editor.formatOnSave": true, // ファイル保存時に自動でフォーマットを実行する

  // --------------------------------------------------
  // Javaファイルに特化した設定
  // --------------------------------------------------
  "[java]": {
    // JavaファイルのデフォルトフォーマッターとしてRed Hatの拡張機能を指定
    "editor.defaultFormatter": "redhat.java"
  }
}
